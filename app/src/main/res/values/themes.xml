<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GithubUser" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowBackground">@color/colorSecondary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorOnPrimary</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="strokeColor">@color/colorOnPrimary</item>
        <item name="color">@color/colorPrimary</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="titleTextColor">@color/colorOnPrimary</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="ToolbarSubtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="subtitleTextColor">@color/colorOnPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="poppinsExtraLight">
        <item name="fontFamily">@font/poppins_extralight</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>
    <style name="poppinsLight">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>
    <style name="poppinsRegular">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>
    <style name="poppinsMedium">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>
    <style name="poppinsSemiBold">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>
    <style name="poppinsBold">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>
    <style name="poppinsExtraBold">
        <item name="fontFamily">@font/poppins_extrabold</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>
    <style name="poppinsBlack">
        <item name="fontFamily">@font/poppins_black</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <style name="Theme.GithubUser" parent="Base.Theme.GithubUser" />
</resources>